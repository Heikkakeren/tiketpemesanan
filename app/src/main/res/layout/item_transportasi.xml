<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/primary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ikon Transportasi -->
        <ImageView
            android:id="@+id/iconTransport"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_airplane"
            app:tint="@color/primary"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Info Tiket -->
        <LinearLayout
            android:id="@+id/infoTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconTransport"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesawat"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvMaskapai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garuda Indonesia"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvRute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta â†’ Bali"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Tanggal & Harga -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-04-05"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.200.000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <!-- Tombol Edit, Hapus, Detail, Bayar -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/infoTiket"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                app:tint="@color/primary"
                android:contentDescription="Edit"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                app:tint="@android:color/holo_red_dark"
                android:layout_marginStart="6dp"
                android:contentDescription="Delete"/>

            <ImageButton
                android:id="@+id/btnDetail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_ticket"
                app:tint="@color/secondary"
                android:layout_marginStart="6dp"
                android:contentDescription="Detail Tiket"/>

            <ImageButton
                android:id="@+id/btnBayar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_wallet"
                app:tint="@color/primary_dark"
                android:layout_marginStart="6dp"
                android:contentDescription="Bayar Tiket"/>
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
