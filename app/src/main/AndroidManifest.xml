<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin kamera (opsional, untuk QR code scanning di masa depan) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Izin untuk notifikasi jadwal (jika pakai AlarmManager) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiketPemesanan"
        tools:targetApi="31">

        <!-- LoginActivity sebagai launcher (karena butuh login dulu) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.TiketPemesanan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

        <!-- MainActivity (dashboard setelah login) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

        <!-- AddTransportasiActivity -->
        <activity
            android:name=".AddTransportasiActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

        <!-- EditTransportasiActivity -->
        <activity
            android:name=".EditTransportasiActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

        <!-- TicketDetailActivity (QR Code) -->
        <activity
            android:name=".TicketDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

        <!-- PaymentActivity (simulasi pembayaran) -->
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.TiketPemesanan" />

    </application>

</manifest>